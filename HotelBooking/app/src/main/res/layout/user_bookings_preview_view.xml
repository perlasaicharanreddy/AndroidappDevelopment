<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/booking_room_image_rll">

        <ImageView
            android:id="@+id/user_card_room_image"
            android:layout_width="match_parent"
            android:layout_height="220dp" />
    </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/user_preview_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/booking_room_image_rll"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_preview_card_room_image"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/user_preview_card_hotel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hotel name"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_preview_card_hotel_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_preview_card_hotel_name"
                    android:text="hotel address"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/user_preview_card_hotel_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_preview_card_hotel_address"
                    android:layout_marginTop="6dp"
                    android:text="City:"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/user_preview_card_hotel_state"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_preview_card_hotel_city"
                    android:layout_marginTop="6dp"
                    android:text="State:"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/user_preview_card_hotel_pincode"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_preview_card_hotel_city"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/user_preview_card_hotel_state"
                    android:text="Pincode:"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/user_preview_card_hotel_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_preview_card_hotel_state"
                    android:layout_marginTop="9dp"
                    android:text="hotel description"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/user_preview_card_room_price"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_preview_card_hotel_description"
                    android:layout_marginTop="9dp"
                    android:text="price"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_preview_card_ac_or_nonac"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_preview_card_room_price"
                    android:layout_marginTop="9dp"
                    android:text="Ac/non Ac:"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/user_preview_card_hotel_facilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_preview_card_ac_or_nonac"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/user_preview_card_hotel_facility1"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:text="facility1"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/user_preview_card_hotel_facility2"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@+id/user_preview_card_hotel_facility1"
                        android:text="facility2"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/user_preview_card_hotel_facility3"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/user_preview_card_hotel_facility2"

                        android:text="facility3"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="normal" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/user_preview_card_room_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_preview_card_hotel_facilities"
                    android:layout_marginTop="4dp"
                    android:text="Room Type"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/user_preview_card_room_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_preview_card_room_type"
                    android:layout_marginTop="8dp"
                    android:text="Room description"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/user_preview_card_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_preview_card_room_description"
                    android:layout_marginTop="8dp"
                    android:text="Contact no:"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


</RelativeLayout>
