<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/admin_manage_user_image"
            android:layout_width="150dp"
            android:layout_height="180dp" />

        <TextView
            android:id="@+id/admin_manage_user_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_manage_user_image"
            android:gravity="center"
            android:text="User name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/admin_manage_user_image">

            <TextView
                android:id="@+id/admin_manage_user_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/admin_manage_user_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/admin_manage_user_birthday"
                android:layout_marginTop="4dp"
                android:text="id card"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/admin_manage_user_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/admin_manage_user_id_card"
                android:layout_marginTop="4dp"
                android:text="phone no"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/admin_manage_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/admin_manage_user_phone_no"
                android:layout_marginTop="4dp"
                android:text="Email id"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/admin_manage_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/admin_manage_user_email"
                android:layout_marginTop="4dp"
                android:text="Address:"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/admin_manage_user_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/admin_manage_user_address"
                android:layout_marginTop="4dp"
                android:text="City"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="normal" />


        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>