<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_card_room_image"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_card_room_image"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/user_card_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hotel name"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_card_hotel_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_card_hotel_name"
                android:text="hotel address"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/user_card_room_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_card_hotel_address"
                android:layout_marginTop="9dp"
                android:text="price"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/user_card_hotel_facilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_card_room_price"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/user_card_hotel_facility1"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:text="facility1"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/user_card_hotel_facility2"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/user_card_hotel_facility1"
                    android:text="facility2"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/user_card_hotel_facility3"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/user_card_hotel_facility2"

                    android:text="facility3"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="normal" />


            </RelativeLayout>

            <TextView
                android:id="@+id/user_card_room_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_card_hotel_facilities"
                android:layout_marginTop="4dp"
                android:text="Room description"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal" />
        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>