<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.PhoneOrEmailLoginActivity"
    android:background="@drawable/image13">

    <Button
        android:id="@+id/home_login_phone_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthday"
        android:layout_marginStart="10dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="10sp"
        android:background="@drawable/buttons1"
        android:padding="8dp"
        android:text="Phone login"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/home_login_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_login_phone_login"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10sp"
        android:background="@drawable/buttons1"
        android:padding="8dp"
        android:text="Email login"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textStyle="normal" />

    <CheckBox
        android:id="@+id/home_login_check_box_agent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_login_email_login"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:text="I am an agent"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textStyle="normal" />





</RelativeLayout>