                    android:layout_centerHorizontal="true"
                    android:text="connecting room"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_linear3_catogory_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_linear2_catogory_layout"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/user_villa_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/villa_room_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/villa" />

                <TextView
                    android:id="@+id/villa_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/villa_room_image"
                    android:layout_centerHorizontal="true"
                    android:text="villa"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_junior_suite_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/junior_suite_room_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/suiteroom" />

                <TextView
                    android:id="@+id/junior_suite_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/junior_suite_room_image"
                    android:layout_centerHorizontal="true"
                    android:text="Junior suite room"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_apartment_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/apartment_room_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/apartmentroom" />

                <TextView
                    android:id="@+id/apartment_room_name"
                    android:layout_width="wrap_content"
