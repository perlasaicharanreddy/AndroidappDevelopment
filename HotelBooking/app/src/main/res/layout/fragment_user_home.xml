<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Users.UserHomeFragment">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/slogan_category1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="15dp"
            android:text="Types of Rooms Available"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/user_linear1_catogory_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slogan_category1"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/user_single_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/single_room_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/singleroom" />

                <TextView
                    android:id="@+id/single_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/single_room_image"
                    android:layout_centerHorizontal="true"
                    android:text="single room"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_double_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/double_room_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/doubleroom" />

                <TextView
                    android:id="@+id/double_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/double_room_image"
                    android:layout_centerHorizontal="true"
                    android:text="double room"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_triple_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/triple_room_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/tripleroom" />

                <TextView
                    android:id="@+id/triple_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/triple_room_image"
                    android:layout_centerHorizontal="true"
                    android:text="triple room"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/user_linear2_catogory_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_linear1_catogory_layout"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/user_twin_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/twin_room_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/twinroom" />

                <TextView
                    android:id="@+id/twin_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/twin_room_image"
                    android:layout_centerHorizontal="true"
                    android:text="twin room"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_suite_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/suite_room_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/suiteroom" />

                <TextView
                    android:id="@+id/suite_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/suite_room_image"
                    android:layout_centerHorizontal="true"
                    android:text="suite room"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_connecting_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/connecting_room_image"
